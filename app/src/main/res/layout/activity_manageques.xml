<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.exam.Manageques">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Manage Questions"
        android:textColor="#ffffff"
        android:background="@color/app_color"
        android:padding="10dp"
        android:textSize="22dp"
        android:textAlignment="center"


        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="2dp"
        >

        <Button
            android:id="@+id/Addques"
            android:layout_width="210dp"
            android:layout_height="57dp"
            android:text="Add Questions"
            android:textAlignment="center"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:background="@color/app_color"
            android:textSize="15dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:elevation="10dp"
            android:onClick="AddQuestions"
            />

        <Button
            android:id="@+id/UpdateQues"
            android:layout_width="210dp"
            android:layout_height="57dp"
            android:text="Update Question"
            android:textAlignment="center"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:background="@color/app_color"
            android:textSize="15dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:elevation="10dp"
            android:onClick="UpdateQuestions"
            />
        <Button
            android:id="@+id/DeleteQues"
            android:layout_width="210dp"
            android:layout_height="57dp"
            android:text="Delete Question"
            android:textAlignment="center"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:background="@color/app_color"
            android:textSize="15dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:elevation="10dp"
            android:onClick="DeleteQuestions"
            />

    </LinearLayout>


</LinearLayout>
